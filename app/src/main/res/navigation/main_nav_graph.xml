<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.nathalie.wordpad.ui.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_main_to_details"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_main_to_addWord"
            app:destination="@id/addWordFragment" />
        <action
            android:id="@+id/action_mainFragment_to_dropDownFragment"
            app:destination="@id/dropDownFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.nathalie.wordpad.ui.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="id"
            app:argType="long" />
        <action
            android:id="@+id/action_details_to_updateWord"
            app:popUpTo="@id/mainFragment"
            app:destination="@id/updateWordFragment" />
    </fragment>
    <fragment
        android:id="@+id/addWordFragment"
        android:name="com.nathalie.wordpad.ui.AddWordFragment"
        android:label="fragment_add_word"
        tools:layout="@layout/fragment_add_word" />
    <fragment
        android:id="@+id/updateWordFragment"
        android:name="com.nathalie.wordpad.ui.UpdateWordFragment"
        android:label="fragment_update_word"
        tools:layout="@layout/fragment_update_word">
        <argument
            android:name="id"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/dropDownFragment"
        android:name="com.nathalie.wordpad.ui.DropDownFragment"
        android:label="fragment_drop_down"
        tools:layout="@layout/fragment_drop_down" />

</navigation>